### manifest.ttl for danny.ayers.name ###

@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix dcterms: <http://purl.org/dc/terms/> .

# SIOC 

@prefix trm: <http://purl.org/stuff/transmission/> .
@prefix fs: <http://purl.org/stuff/filesystem/> .
@prefix pc: <http://purl.org/stuff/postcraft/> .
@prefix t: <http://hyperdata.it/transmissions/> . # for custom terms & instances

<https://danny.ayers.name> a pc:Site ;
    rdfs:label "danny.ayers.name" ;
    dcterms:title "Raw" ;
    pc:contains <https://danny.ayers.name/blog> .
    
# this should maybe give the contentgroup a renderType, indirect with template etc

# POST CONTENT
t:PostContent a pc:ContentGroup ; 
    a pc:Partial ;
    fs:sourceDirectory "test" ;
    fs:targetDirectory "site/post-content-cache" ;
    pc:template "layouts/mediocre/post-content_template.njk" .

# POST PAGES
t:PostPages a pc:ContentGroup ;
    fs:sourceDirectory "site/post-content-cache" ;
    fs:targetDirectory "site/blog" ;
    pc:template "layouts/mediocre/post-page_template.njk" .

# MAIN PAGE
t:IndexPage a pc:SpecialCase ;
    a pc:FrontPage ;
    fs:sourceDirectory "site/post-content-cache" ;
    fs:targetFile "site/blog/index.html" ;
    pc:template "layouts/mediocre/index-page_template.html" .



# pinned
<https://danny.ayers.name/index> a pc:SpecialCase ;
    pc:state "pinned" ;
    fs:sourceFile "posts/2023-10-27_hello.md" ;
    fs:targetFile "site/blog/2023-10-27_hello.html" ;
     pc:template "layouts/mediocre/mediocre-posts_template.html" .
